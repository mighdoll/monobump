{
  "name": "monobump",
  "description": "Smart version bumping for pnpm monorepos - only bumps changed packages and their dependents",
  "version": "0.1.8",
  "type": "module",
  "bin": "./bin/monobump.ts",
  "files": [
    "bin/",
    "src/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mighdoll/monobump.git"
  },
  "scripts": {
    "bump": "./bin/monobump.ts",
    "global": "pnpm link --global",
    "test": "vitest",
    "test:once": "vitest run",
    "typecheck": "tsgo --noEmit"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@typescript/native-preview": "7.0.0-dev.20251231.1",
    "vitest": "^4.0.16"
  },
  "license": "MIT",
  "keywords": [
    "bump",
    "monorepo",
    "pnpm",
    "release",
    "semver",
    "version"
  ],
  "engines": {
    "node": ">=22.6.0"
  }
}
